
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"

    android:background="@drawable/jy"
    >

    <Button
        android:layout_width="60dp"
        android:layout_height="70dp"
        android:text="New Button"
        android:id="@+id/choice2"
        android:background="#2bcef3"
        android:layout_alignTop="@+id/choice1"
        android:layout_toRightOf="@+id/choice1"
        android:layout_marginLeft="25dp"
        android:textStyle="italic"
        android:textAlignment="center"
        android:textColor="#f60ae2"
        android:textSize="20dp" />

    <Button
        android:layout_width="60dp"
        android:layout_height="70dp"
        android:text="New Button"
        android:id="@+id/choice3"
        android:layout_alignTop="@+id/choice2"
        android:layout_toLeftOf="@+id/choice4"
        android:layout_marginRight="35dp"
        android:background="#FF2BCEF3"
        android:textStyle="italic"
        android:textColor="#f60ae2"
        android:textAlignment="center"
        android:textSize="20dp" />

    <Button
        android:layout_width="60dp"
        android:layout_height="70dp"
        android:text="New Button"
        android:id="@+id/choice4"
        android:layout_alignTop="@+id/choice3"
        android:layout_alignParentRight="true"
        android:layout_marginRight="33dp"
        android:background="#FF2BCEF3"
        android:textStyle="italic"
        android:textColor="#f60ae2"
        android:textAlignment="center"
        android:textSize="20dp" />

    <ImageView
        android:layout_width="160dp"
        android:layout_height="200dp"
        android:id="@+id/picQuestion"
        android:layout_marginBottom="43dp"
        android:layout_above="@+id/choice2"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="VON"
        android:id="@+id/textView7"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/Skip"
        android:textAlignment="center"
        android:textSize="40dp"
        android:textStyle="bold" />

    <Button
        android:layout_width="60dp"
        android:layout_height="70dp"
        android:text="New Button"
        android:id="@+id/choice1"
        android:layout_marginBottom="61dp"
        android:background="#FF2BCEF3"
        android:clickable="true"
        android:textStyle="italic"
        android:textSize="20dp"
        android:textColor="#f60ae2"
        android:textAlignment="center"
        android:layout_above="@+id/Skip"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/choice3"
        android:layout_alignEnd="@+id/choice3"
        android:layout_marginRight="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="84dp"
        android:id="@+id/Skip" />

</RelativeLayout>