
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Account"
    android:clickable="false"
    android:focusableInTouchMode="false"
    android:focusable="false"
    android:background="@drawable/jy"
    >






    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Games"
        android:id="@+id/button"
        android:alpha="0.55"
        android:backgroundTint="@color/colorPrimary"
        android:background="#ffffe4da"
        android:textColor="#ff000000"
        android:layout_alignBottom="@+id/leaderbtn"
        android:layout_alignRight="@+id/textView10"
        android:layout_alignEnd="@+id/textView10" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:text="Leader Board"
        android:alpha="0.55"
        android:backgroundTint="@color/colorPrimary"
        android:id="@+id/leaderbtn"
        android:background="#ffffe4da"
        android:textColor="#ff000000"
        android:layout_centerVertical="true"

        android:layout_alignLeft="@+id/welcomeuser"
        android:layout_alignStart="@+id/welcomeuser" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Email"
        android:id="@+id/emailInfo"
        android:textSize="19dp"
        android:textColor="#ff000000"
        android:layout_below="@+id/profileImg"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textStyle="bold|italic" />


    <RatingBar
        android:id="@+id/ratingBar1"
        style="?android:attr/ratingBarStyle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:isIndicator="true"
        android:numStars="5"
        android:layout_marginTop="24dp"
        android:layout_below="@+id/textView10"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="Age"
        android:id="@+id/ageInfo"
        android:textSize="19dp"
        android:layout_below="@+id/emailInfo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:textColor="#ff000000"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="70dp"
        android:textStyle="bold|italic" />

    <TextView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:paddingLeft="50dp"
        android:textColor="#0071FF"
        android:textStyle="bold|italic"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Welcome, "
        android:id="@+id/welcomeuser"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/profileImg"
        android:layout_toEndOf="@+id/profileImg"
        android:layout_marginLeft="25dp" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/profileImg"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/anonymous"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your rating is "
        android:textSize="23dp"
        android:id="@+id/textView10"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#ff000000"
        android:textStyle="normal|bold" />

</RelativeLayout>

