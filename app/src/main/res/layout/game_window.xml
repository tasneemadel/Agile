
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/jy"
    android:id="@+id/game_window">
    <!--app:layout_behavior="@string/appbar_scrolling_view_behavior" -->







    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="VON"
        android:id="@+id/textView4"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="40dp"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="360dp"
        android:layout_height="250dp"
        android:background="@drawable/row_bg"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Button
            android:layout_width="110dp"
            android:layout_height="90dp"
            android:text="Math"
            android:id="@+id/mathbutton1"
            android:layout_marginTop="35dp"
            android:textSize="20sp"
            android:textStyle="italic"
            android:textColorHighlight="#ff38bbff"
            android:clickable="true"
            android:background="@drawable/rounded_mathbtn1"

            android:layout_marginLeft="26dp"
            android:layout_marginStart="26dp"
            android:textColor="#ff000000"/>

        <Button
            android:layout_width="110dp"
            android:layout_height="90dp"
            android:text="English"
            android:id="@+id/englishbtn"
            android:background="@drawable/rounded_mathbtn3"
            android:textStyle="italic"
            android:textSize="20sp"

            android:layout_centerHorizontal="true"
            android:layout_marginTop="13dp"

            android:layout_below="@+id/mathbutton1"/>

        <Button
            android:layout_width="110dp"
            android:layout_height="90dp"
            android:text="Science"
            android:id="@+id/Sceincebutton"
            android:background="@drawable/rounded_mathbtn2"
            android:clickable="true"
            android:textStyle="italic"
            android:textSize="20sp"
            android:textColor="#ff000000"
            android:layout_above="@+id/englishbtn"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="27dp"
            android:layout_marginEnd="27dp" />


    </RelativeLayout>

</RelativeLayout>
