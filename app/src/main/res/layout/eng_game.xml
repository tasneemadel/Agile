<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"

    android:background="@drawable/jy"
    >
    <TextView
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="VON"
        android:id="@+id/textView7"
        android:layout_alignParentTop="true"
        android:textAlignment="center"
        android:textSize="40dp"
        android:layout_centerHorizontal="true"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textStyle="bold" />

    <Button
        android:text="Next"
        android:textSize="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Skip"

        android:background="#FF2BCEF3"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="380dp"
        android:layout_height="360dp"
        android:background="@drawable/rounded_bg"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView7">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/result_txt2"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="115dp"
            android:layout_centerHorizontal="true"
            android:textSize="21dp"
            android:textStyle="bold"
            android:textColor="#ff0a0a0a"
            android:text=""

            />
        <Button
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="New Button"
            android:id="@+id/choice1"
            android:layout_marginBottom="15dp"
            android:background="@drawable/engbtn"
            android:clickable="true"
            android:textStyle="normal"
            android:textSize="17sp"
            android:textColor="#000FF0"
            android:textAlignment="center"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="15dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="New Button"
            android:id="@+id/choice3"
            android:background="@drawable/engbtn"
            android:clickable="true"
            android:textStyle="normal"
            android:textSize="17sp"
            android:textColor="#000FF0"
            android:textAlignment="center"
            android:layout_alignTop="@+id/choice4"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <ImageView
            android:layout_width="160dp"
            android:layout_height="200dp"
            android:id="@+id/picQuestion"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/choice1"
            android:layout_toEndOf="@+id/choice1" />

        <Button
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="New Button"
            android:id="@+id/choice4"
            android:background="@drawable/engbtn"
            android:clickable="true"
            android:textStyle="normal"
            android:textSize="17sp"
            android:textColor="#000FF0"
            android:textAlignment="center"
            android:layout_alignBottom="@+id/choice2"
            android:layout_alignRight="@+id/picQuestion"
            android:layout_alignEnd="@+id/picQuestion"
            android:layout_alignTop="@+id/choice2" />

        <Button
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="New Button"
            android:id="@+id/choice2"
            android:background="@drawable/engbtn"
            android:clickable="true"
            android:textStyle="normal"
            android:textSize="17sp"
            android:layout_marginLeft="5dp"
            android:textColor="#000FF0"
            android:textAlignment="center"
            android:layout_alignBottom="@+id/choice1"
            android:layout_alignLeft="@+id/picQuestion"
            android:layout_alignStart="@+id/picQuestion"
            android:layout_alignTop="@+id/choice1" />
    </RelativeLayout>

</RelativeLayout>